<Entete>
    <Jumbo>
     <form class="reg-form">


           <div class="field-row">
              <label class="form-label" for="hs">Price</label>
              <input type="text" id="hs" class="field text-field hs-field" >
            </div>

           <div class="field-row">
              <label class="form-label">Number of Animals Accepted</label>
              <select class="form-dropdown field">
                 <option value="one"> 1 </option>
                 <option value="two"> 3 </option>
                 <option value="three"> 5 </option>
                 <option value="four"> 5+ </option>
              </select>
           </div>

           <div class="field-row">
              <label class="form-label">Availability</label>
              <select class="form-dropdown field">
                 <option value="1st Year"> Monday </option>
                 <option value="2nd Year"> Tuesday </option>
                 <option value="3rd Year"> Wednesday</option>
                 <option value="4th Year"> Thursday </option>
                 <option value="5th Year"> Friday</option>
                 <option value="5th Year"> Saturday</option>
                 <option value="5th Year"> Sunday</option>
                 <option value="5th Year"> Weekend only</option>
                 <option value="5th Year"> Week days only</option>
              </select>
           </div>
            <p class="petSitterParam">Choose your Availability:</p>

            <div>
              <input type="checkbox" id="Monday" name="Monday" >
              <label for="Monday">Monday</label>
            </div>
            <div>
              <input type="checkbox" id="Tuesday" name="Tuesday" >
              <label for="Tuesday">Tuesday</label>
            </div>
            <div>
              <input type="checkbox" id="Wednesday" name="Wednesday" >
              <label for="Wednesday">Wednesday</label>
            </div>
            <div>
              <input type="checkbox" id="Thursday" name="Thursday" >
              <label for="Thursday">Thursday</label>
            </div>
            <div>
              <input type="checkbox" id="Friday" name="Friday" >
              <label for="Friday">Friday</label>
            </div>
            <div>
              <input type="checkbox" id="Saturday" name="Saturday" >
              <label for="Saturday">Saturday</label>
            </div>
            <div>
              <input type="checkbox" id="Sunday" name="Sunday">
              <label for="Sunday">Sunday</label>
            </div>
            <div>
              <input type="checkbox" id="Weekend" name="Weekend only" >
              <label for="Weekend only">Weekend only</label>
            </div>
            <div>
              <input type="checkbox" id="Week" name="Week days only">
              <label for="Week days only">Week days only</label>
            </div>
            <div>
              <input type="checkbox" id="Everyday" name="Everyday">
              <label for="Everyday">Everyday</label>
            </div>
            <p class="petSitterParam">Choose the animals you accept:</p>
            <div>
              <input type="checkbox" id="Dogs" name="Dogs">
              <label for="Dogs">Dogs</label>
            </div>
            <div>
              <input type="checkbox" id="Cats" name="Cats">
              <label for="Cats">Cats</label>
            </div>
            <div>
              <input type="checkbox" id="Humster" name="Humster">
              <label for="Humster">Humster</label>
            </div>
            <div>
              <input type="checkbox" id="Snake" name="Snake">
              <label for="Snake">Snake</label>
            </div>
            <div>
              <input type="checkbox" id="Birds" name="Birds">
              <label for="Birds">Birds</label>
            </div>

           <div class="fields btn">
               <LinkTo @route="acceuil2" class="div submit btn-submit" >Create</LinkTo>
           </div>

      </form>

    </Jumbo>
</Entete>